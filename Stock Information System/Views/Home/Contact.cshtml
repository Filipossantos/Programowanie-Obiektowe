@{
    ViewBag.Title = "Login site";
}

<style>
    body {
        background-color: lightgrey;
    }

    input.submit {
        color: white;
        background-color: #0f0f0f;
        cursor: pointer;
        border-radius: 4px;
        box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
        font-size: 17px;
    }

    input {
        width: 100%;
        background-color: #fff;
        border-radius: 4px;
        padding: 0.9rem 0.7rem;
        box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
        font-size: 17px;
        color: #4A4A4A;
    }

    h1 {
        text-shadow: Black 0.1em 0.1em 0.5em;
    }

    #dateAndTime {
        font-size: 14pt;
        text-align: center;
    }
    
    footer p.copyright {
    	margin-bottom: 0px;
    	float: left;
    	margin-top: 12px;
    	font-size: 11px;
    	letter-spacing: -1px;
    }
</style>

<body onload="showDateAndTime()">
<br/>
<div id="dateAndTime">
    <p></p>
</div>

<div class="login">
    <h1><b>Log In</b></h1>
    <section>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="error-message">
                @ViewBag.ErrorMessage
            </div>
        }

        @using (Html.BeginForm("Login", "Logging", FormMethod.Post))
        {
            <h3>
                <input type="text" name="username" placeholder="Login" required><br>
                <input type="password" name="password" placeholder="Password" required><br>
                <input type="submit" value="Log In" class="submit">
            </h3>
        }
    </section>
</div>

<script>
        function showDateAndTime() {
            var date = new Date();

            var seconds = date.getSeconds();
            var minutes = date.getMinutes();
            var hour = date.getHours();
            var day = date.getDate();
            var month = date.getMonth() + 1;
            var year = date.getFullYear();

            if (seconds < 10) {
                seconds = '0' + seconds;
            }

            if (minutes < 10) {
                minutes = '0' + minutes;
            }

            if (hour < 10) {
                hour = '0' + hour;
            }

            if (day < 10) {
                day = '0' + day;
            }

            if (month < 10) {
                month = '0' + month;
            }

            document.getElementById('dateAndTime').innerHTML =
                hour +
                ':' +
                minutes +
                ':' +
                seconds +
                ' | ' +
                day +
                '.' +
                month +
                '.' +
                year;

            setTimeout('showDateAndTime()', 1000);
        }
    </script>
<footer>
    <p class="copyright">© 2023 Stock Information System. All rights reserved.</p>
</footer>
</body>
