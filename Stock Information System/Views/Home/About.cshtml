@{
    ViewBag.Title = "Stocks";
}

<style>

body {
    background-color:lightgrey;
}

h1 {
    text-shadow: Black 0.1em 0.1em 0.5em;
}

#dateAndTime {
	font-size:  14pt;
	text-align: center;
}

footer p.copyright {
	margin-bottom: 0px;
	float: left;
	margin-top: 12px;
	font-size: 11px;
	letter-spacing: -1px;
}

</style>

<body onload="showDateAndTime()">
<br/>
<div id="dateAndTime"><p></p></div>

<div class="stocks">
    <h1><b>Stocks</b></h1>
</div>

<script>
function showDateAndTime() {
				var date = new Date();

				var seconds = date.getSeconds();
				var minutes = date.getMinutes();
				var hour = date.getHours();
				var day = date.getDate();
				var month = date.getMonth() + 1;
				var year = date.getFullYear();

				if (seconds < 10) {
					seconds = '0' + seconds;
				}

				if (minutes < 10) {
					minutes = '0' + minutes;
				}

				if (hour < 10) {
					hour = '0' + hour;
				}

				if (day < 10) {
					day = '0' + day;
				}

				if (month < 10) {
					month = '0' + month;
				}

				document.getElementById('dateAndTime').innerHTML =
					hour +
					':' +
					minutes +
					':' +
					seconds +
					' | ' +
					day +
					'.' +
					month +
					'.' +
					year;

				setTimeout('showDateAndTime()', 1000);
			}
	</script>
<footer>
	<p class="copyright">© 2023 Stock Information System. All rights reserved.</p>
</footer>
</body>